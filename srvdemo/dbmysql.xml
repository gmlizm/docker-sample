### yyspace docker-compose for services
version: "3.2"

services:
######################################################
### db_mysql container
######################################################
  db_mysql:
    container_name: db_mysql
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_ROOT_HOST: "%"
      MYSQL_LOG_CONSOLE: "false"
    hostname: db_mysql
    image: mysql/mysql-server:latest
    networks:
      - xnet
    ports:
      - "3306:3306"
    volumes:
      - type: bind
        source: ./conf/my.cnf
        target: /etc/my.cnf
      - type: bind
        source: ./data/mysql/data
        target: /var/lib/mysql
      - type: bind
        source: ./data/mysql/log
        target: /var/log

networks:
  xnet:
